{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "git": {
    "commit": false,
    "tag": false,
    "push": false
  },
  "github": {
    "release": true,
    "releaseName": "Release ${version}",
    "tokenRef": "GITHUB_TOKEN"
  },
  "npm": false,
  "hooks": {
    "before:init": [
      "echo 'Preparing release for version ${version}'"
    ],
    "after:bump": [
      "npx auto-changelog -c .auto-changelog"
    ]
  },
  "plugins": {
    "@release-it/bumper": {
      "in": "Sources/xs3-cert/versioninfo.swift",
      "out": "Sources/xs3-cert/versioninfo.swift"
    },
    "@release-it/conventional-changelog": {
      "ignoreRecommendedBump": true,
      "infile": "CHANGELOG.md",
      "preset": {
        "name": "conventionalcommits",
        "types": [
          {
            "type": "feat",
            "section": "ğŸ‰ Features"
          },
          {
            "type": "fix",
            "section": "ğŸ› Bug Fixes"
          },
          {
            "type": "perf",
